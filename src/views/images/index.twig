{# Index action template for CommentsController #}
{% extends 'base.twig' %}

{% block title %}{{  'Images list'|trans }}{% endblock %}

{% block content %}

    <table>
        <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Image'|trans }}</th>
            <th colspan="3">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id|e }}</td>
                <td>
                    <a href="{{ url('image_view', {'id': image.id}) }}" title="{{ image.title|e }}">
                        <img src='{{ app.request.basepath }}/web/upload/{{ image.name|e }}' alt='{{ image.title|e }}'
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
